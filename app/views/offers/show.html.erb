<p style="color: green"><%= notice %></p>

<%= render @offer %>


<% Reaction.kinds.each do |kind| %>
<%= button_to "#{kind}", user_reaction_path(offer_id: @offer.id, kind: kind),
method: :post %>
<% end %>


<div>
  <%= link_to "Edit this offer", edit_offer_path(@offer) %> |
  <%= link_to "Back to offers", offers_path %>

  <%= button_to "Destroy this offer", @offer, method: :delete %>
</div>
